<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ingredient"
            type="com.example.foodylearn.models.ExtendedIngredient" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            loadIngredientImageFromUrl = "@{ingredient.image}"
            tools:src="@drawable/ic_error_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIngredientTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ingredient.name}"
                android:fontFamily="@font/courgette"
                android:textStyle="bold"
                android:textColor="@color/darkGray"
                android:textSize="24sp"
                tools:text="Cinamon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    setAmount="@{ingredient.amount}"
                    android:fontFamily="sans-serif-medium"
                    tools:text="1"/>

                <TextView
                    android:id="@+id/tvUnit"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ingredient.unit}"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Teaspoon"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tvConsist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ingredient.consistency}"
                tools:text="Solid"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>


    </LinearLayout>
</layout>